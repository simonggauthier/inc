html
	head
		title Incremental Game

		// Favicon
		link(rel='icon', href='/res/img/icon.png')

		// Fonts
		link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=MedievalSharp&display=swap')

		// Style
		link(rel='stylesheet', href='/res/css/style.css')

		// Librairies
		script(src='https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.6/require.js')

	body
		.header
			img(src='/res/img/icon.png')
			h1.title Incremental Game

		#game
			#character
				.window
					.title Character

					.content
						button#btn-lvl-up Level Up
						
						ul.stats
							li.stat.level
								.label Level
								.value 0
							li.stat.class
								.label Class
								.value None
							li.stat.attributes
								ul
									li.stat-s.attribute.strength
										.label Strength
										.value 0
									li.stat-s.attribute.strength
										.label Dexterity
										.value 0
									li.stat-s.attribute.strength
										.label Endurance
										.value 0
									li.stat-s.attribute.strength
										.label Intelligence
										.value 0
									li.stat-s.attribute.strength
										.label Charisma
										.value 0

			#equipment
				.window
					.title Equipment

					.content
						.slots
							.row
								.group
									.slot.helmet
							.row
								.group.g2
									.slot.chest
									.slot.amulet
							.row
								.group.g3
									.slot.left-ring
									.slot.belt
									.slot.right-ring
							.row
								.group.g2
									.slot.gloves
									.slot.boots

	script.
		requirejs.config({
			baseUrl: '/app'
		});

		function log (s) {
			console.log(s);
		}

	script(src='/app/main.js')
